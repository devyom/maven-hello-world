pipeline {
    agent any 

    stages {
        stage('Build') { 
            steps {
                git 'https://github.com/devyom/maven-hello-world.git'
                   withMaven(maven : 'M2') 
                      sh 'mvn clean install' 
            }

        }
        stage('Test'){
            steps {
                withMaven(maven : 'm2' )
                sh 'mvn test'
                junit 'reports/**/*.xml' 
            }
        }
        stage('Deploy') {
            steps {
                withMaven(maven : 'm2')
                sh 'mvn package'
            }
        }
    }
}
